{
  "name": "@punk/glyphcase",
  "version": "0.1.0",
  "description": "Punk Framework skills system - SQLite database with Lua scripting",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "tsup src/index.ts --format esm,cjs --dts",
    "dev": "tsup src/index.ts --format esm,cjs --dts --watch",
    "test": "vitest",
    "lint": "eslint src/",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist .turbo node_modules"
  },
  "dependencies": {
    "@punk/core": "workspace:*",
    "@logtape/logtape": "^0.8.0",
    "better-sqlite3": "^9.2.2",
    "wasmoon": "^1.16.0",
    "uuid": "^9.0.1",
    "zod": "^3.22.4"
  },
  "optionalDependencies": {
    "bcrypt": "^5.1.1"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.8",
    "@types/node": "^20.10.0",
    "@types/uuid": "^9.0.7",
    "eslint": "^8.55.0",
    "typescript": "^5.3.3",
    "vitest": "^1.0.4"
  }
}
