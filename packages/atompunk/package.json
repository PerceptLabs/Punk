{
  "name": "@punk/atompunk",
  "version": "1.0.0",
  "description": "Backend template generation system - Secure, production-ready code from audited templates",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "tsup src/index.ts --format esm,cjs --dts",
    "dev": "tsup src/index.ts --format esm,cjs --dts --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint src/",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist .turbo node_modules"
  },
  "keywords": [
    "punk",
    "backend",
    "templates",
    "code-generation",
    "encore",
    "security",
    "scaffolding",
    "authentication",
    "crud",
    "webhooks"
  ],
  "dependencies": {
    "@punk/core": "workspace:*",
    "zod": "^3.22.4"
  },
  "peerDependencies": {
    "encore.dev": "^1.0.0"
  },
  "peerDependenciesMeta": {
    "encore.dev": {
      "optional": true
    }
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "eslint": "^8.55.0",
    "tsup": "^8.0.1",
    "typescript": "^5.3.3",
    "vitest": "^1.0.4"
  }
}
