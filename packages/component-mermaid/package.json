{
  "name": "@punk/component-mermaid",
  "version": "1.0.0",
  "description": "Punk wrapper for Mermaid diagrams",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "tsup src/index.tsx --format cjs,esm --dts",
    "dev": "tsup src/index.tsx --format cjs,esm --dts --watch",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@punk/core": "workspace:*",
    "mermaid": "^10.6.1",
    "zod": "^3.22.4"
  },
  "peerDependencies": {
    "react": "^18.2.0"
  }
}
